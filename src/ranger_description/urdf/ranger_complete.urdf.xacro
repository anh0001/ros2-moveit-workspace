<?xml version="1.0" encoding="utf-8"?>
<robot name="ranger_mini_complete" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Accept mesh directory as argument with default value -->
  <xacro:arg name="mesh_dir" default="package://ranger_description/meshes"/>

  <xacro:property name="M_PI" value="3.14159265359"/>
  <xacro:property name="base_to_footprint_z" value="0.33"/>
  <xacro:property name="lidar_x" value="0.33"/>
  <xacro:property name="lidar_y" value="0.0"/>
  <xacro:property name="lidar_z" value="0.0"/>
  <xacro:property name="camera_x" value="0.28"/>
  <xacro:property name="camera_y" value="0.0"/>
  <xacro:property name="camera_z" value="0.115"/>
  <xacro:property name="arm_x" value="0.15"/>
  <xacro:property name="arm_y" value="0.0"/>
  <xacro:property name="arm_z" value="0.077"/>
  <xacro:property name="piper_camera_x" value="-0.085"/>
  <xacro:property name="piper_camera_y" value="0.0"/>
  <xacro:property name="piper_camera_z" value="0.04"/>
  <xacro:property name="piper_camera_roll" value="0.0"/>
  <xacro:property name="piper_camera_pitch" value="0.2618"/>  <!-- 15 degrees -->
  <xacro:property name="piper_camera_yaw" value="0.0"/>
  <xacro:property name="mesh_dir" value="$(arg mesh_dir)"/>

  <!-- PiPER arm wrapper -->
  <xacro:include filename="$(find ranger_description)/urdf/piper_arm_macro.xacro" />

  <link
    name="base_link">
    <inertial>
      <origin
        xyz="-0.0242698272228022 -0.0030308024613212 0.0544267444673498"
        rpy="0 0 0" />
      <mass
        value="10" />
      <inertia ixx="0.1354" ixy="0.0" ixz="0.0" iyy="0.2417" iyz="0.0" izz="0.3085"/>
    </inertial>
    <visual>
      <origin
        xyz="0 0 0.0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="${mesh_dir}/ranger_base.dae" scale="1000 1000 1000" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
      </material>
    </visual>
        <collision>
            <origin xyz="0 0 -0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.5 0.35 0.2"/>
            </geometry>
        </collision>
   </link>

  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 ${base_to_footprint_z}" rpy="0 0 0"/>
  </joint>

   <link
    name="fr_steering_wheel_link">
    <inertial>
      <origin
        xyz="1.8493E-05 1.2713E-06 0.043679"
        rpy="0 0 0" />
      <mass
        value="1" />
      <inertia
        ixx="0.0063625"
        ixy="-1.0581E-07"
        ixz="-4.0831E-07"
        iyy="0.006363"
        iyz="-3.4944E-08"
        izz="0.010465" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh filename="${mesh_dir}/steering_wheel.dae" scale="10 10 10"/>
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
          <cylinder radius="0.001" length="0.001"/>
      </geometry>
    </collision>
  </link>
  <joint
    name="fr_steering_joint"
    type="revolute">     
    <origin
      xyz="0.25 -0.19 -0.1"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="fr_steering_wheel_link" />
    <axis
      xyz="0 0 -1" />
    <limit effort="5" velocity="6.28"  lower="-2.1" upper="2.1" />

  </joint>


  <link name="fr_wheel_link">
      <inertial>
          <mass value="8" />
          <origin xyz="0 0 0" />
          <inertia ixx="0.02047" ixy="0.0" ixz="0.0" iyy="0.02047" iyz="0.0" izz="0.0324"/>            
          </inertial>
      <visual>
          <origin xyz="0 0 0" rpy="3.14 0 0" />
          <geometry>
            <mesh filename="${mesh_dir}/wheel_v3.dae" scale="10 10 10"/>
          </geometry>
      </visual>
      <collision>
          <origin xyz="0 0 -0.005" rpy="1.57 0 0" />
          <geometry>
              <cylinder length="0.08" radius="0.09" />
          </geometry>
                <contact>
                    <ode>
                  <min_depth>0.001</min_depth>
                    </ode>
              </contact>
      </collision>
  </link>

        <joint name="fr_wheel" type="continuous">
            <origin xyz="0.0 0.0 -0.12" rpy="0 0 0" />
            <parent link="fr_steering_wheel_link"/>
            <child link="fr_wheel_link"/>
            <axis xyz="0 1 0" rpy="0 0 0" />
        </joint>


