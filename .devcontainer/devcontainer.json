{
  "name": "ROS 2 Humble MoveIt Workspace (X11)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "initializeCommand": "bash -lc '\"${localWorkspaceFolder}/.devcontainer/scripts/init-x11.sh\" \"${localWorkspaceFolder}/.devcontainer/.docker.xauth\"'",

  "runArgs": [
    "--network=host",
    "--ipc=host",
    "--gpus=all",
    "--security-opt=seccomp=unconfined",
    "--device=/dev/dri",
    "--group-add=video",
    "--add-host=host.docker.internal:host-gateway"
  ],

  "containerEnv": {
    "DISPLAY": ":1",
    "XAUTHORITY": "/tmp/.docker.xauth",
    "XDG_RUNTIME_DIR": "/tmp/runtime-ros",
    "QT_X11_NO_MITSHM": "1",
    "QT_QPA_PLATFORM": "xcb",
    "QT_LOGGING_RULES": "*.debug=false;qt.qpa.*=false",
    "LIBGL_ALWAYS_SOFTWARE": "1",
    "LIBGL_ALWAYS_INDIRECT": "1",
    "GALLIUM_DRIVER": "llvmpipe",
    "MESA_GL_VERSION_OVERRIDE": "3.3",
    "LIBGL_DRI3_DISABLE": "1",
    "OGRE_RTT_MODE": "Copy",
    "QT_AUTO_SCREEN_SCALE_FACTOR": "0",
    "QT_OPENGL": "software",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "all",
    "RMW_IMPLEMENTATION": "rmw_cyclonedds_cpp"
  },

  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/.docker.xauth,target=/tmp/.docker.xauth,type=bind"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "ms-iot.vscode-ros",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "dotjoshjohnson.xml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": [
              "-c",
              "source /opt/ros/humble/setup.bash && source /workspace/install/setup.bash 2>/dev/null || true && exec bash"
            ]
          }
        }
      }
    }
  },

  "postCreateCommand": "bash -lc 'set -e; sudo apt-get update; sudo rosdep init 2>/dev/null || true; rosdep update; cd /workspace; rosdep install --from-paths src --ignore-src -r -y'",
  "postStartCommand": "bash -lc 'set -e; mkdir -p \"${XDG_RUNTIME_DIR:-/tmp/runtime-ros}\"; chmod 700 \"${XDG_RUNTIME_DIR:-/tmp/runtime-ros}\"; if [ -n \"${DISPLAY:-}\" ] && [ -f \"${XAUTHORITY:-/tmp/.docker.xauth}\" ]; then xauth nlist \"$DISPLAY\" 2>/dev/null | sed -e \"s/^..../ffff/\" | xauth -f \"${XAUTHORITY:-/tmp/.docker.xauth}\" nmerge - 2>/dev/null || true; fi'",

  "updateRemoteUserUID": true,
  "remoteUser": "ros"
}
