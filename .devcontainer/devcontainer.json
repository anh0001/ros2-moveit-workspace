{
  "name": "ROS 2 Humble MoveIt Workspace (X11)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",

  "runArgs": [
    "--network=host",
    "--ipc=host",
    "--device=/dev/dri",
    "--group-add=video"
  ],

  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "XAUTHORITY": "/home/ros/.Xauthority",
    "XDG_RUNTIME_DIR": "/tmp/runtime-ros",
    "QT_X11_NO_MITSHM": "1",
    "QT_QPA_PLATFORM": "xcb",
    "LIBGL_ALWAYS_SOFTWARE": "1",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "all",
    "RMW_IMPLEMENTATION": "rmw_cyclonedds_cpp"
  },

  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=${localEnv:HOME}/.Xauthority,target=/home/ros/.Xauthority,type=bind,consistency=cached"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "ms-iot.vscode-ros",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "dotjoshjohnson.xml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": [
              "-c",
              "source /opt/ros/humble/setup.bash && source /workspace/install/setup.bash 2>/dev/null || true && exec bash"
            ]
          }
        }
      }
    }
  },

  "postCreateCommand": "bash -lc 'set -e; sudo apt-get update; sudo rosdep init 2>/dev/null || true; rosdep update; cd /workspace; rosdep install --from-paths src --ignore-src -r -y'",

  "updateRemoteUserUID": true,
  "remoteUser": "ros"
}
